@model ProductDetailModel


<div class="row">
    <div class="col-md-4">
        <img src="~/images/@Model.Product.ImageUrl" class="img-fluid">
    </div>

    <div class="col-md-8 ps-3">
        <h1 class="mb-3">@Model.Product.Name</h1> <hr>

        @foreach (var item in @Model.Categories)
        {
            <a asp-controller="user" asp-action="list" asp-route-category="@item.Url" class="btn btn-link p-0 mb-3">@item.Name</a>
        }
        <div class="mb-3">
            <h6 class="text-primary mb-3">
               <i class="fa-solid fa-dollar-sign"></i>  @Model.Product.Price
            </h6>
            <button type="button" class="btn btn-primary btn-lg">Add to Card</button>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12 px-5">
        <p class="p-3">@Html.Raw(Model.Product.Description)</p>
    </div>
</div>
@section Scripts{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
}
