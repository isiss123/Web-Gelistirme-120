@model Product


<div class="row">
    <div class="col-md-4">
        <img src="~/images/@Model.ImageUrl" class="img-fluid">
    </div>

    <div class="col-md-8 ps-3">
        
        <h1 class="mb-3">@Model.Name</h1> <hr>
        <a href="#" class="btn btn-link p-0 mb-3">Telefon</a>
        <div class="mb-3">
            <h6 class="text-primary mb-3">
                @Model.Price
            </h6>
            <button type="button" class="btn btn-primary btn-lg">Add to Card</button>
        </div>
        
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <p class="p-3">@Model.Description</p>
    </div>
</div>
