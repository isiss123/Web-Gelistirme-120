@model IEnumerable<IdentityRole>

<h1>Admin Role</h1>
<hr>
<a href="/admin/roles/create" class="btn btn-primary">Create Role</a>

<table class="table table-bordered" style="margin-top: 1rem;">
    <thead>
        <tr>
            <th style="width: 240px;">Id</th>
            <th>Name</th>
            <th style="width: 150px;"></th>
        </tr>
    </thead>

    <tbody>
        @if (Model.Count() > 0)
        {
            foreach (var role in Model)
            {
                <tr>
                    <td> @role.Id </td>       
                    <td> @role.Name</td>
                    <td class="text-center">
                        <a href="/admin/roles/@role.Id" class="btn btn-primary btn-sm me-2">Edit</a>
                        <form action="/admin/deleterole" style="display: inline;">
                            <input type="hidden" name="categoryId" value="@role.Id">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }else{
            <div class="alert alert-warning" style="margin-top: 1rem;">
                <h3>No Role</h3>
            </div>
        }
    </tbody>

</table>