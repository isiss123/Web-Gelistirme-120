@model LoginModel

<h5>Login</h5>
<hr>
<div class="row">
    <div class="col-md-8">
        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <form asp-controller="account" asp-action="login" method="POST" enctype="multipart/form-data">
            <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl">
            <div class="mb-3 row">
                <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="UserName">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="Password" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 row">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary">Login</button>
                    <a href="/account/forgotpassword" class="float-end">Şifrəmi unutdum</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    <script src="/modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}