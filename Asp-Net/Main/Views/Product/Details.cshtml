@model Product


@section Categories
{
    @* Category gelecek *@
    @await Component.InvokeAsync("Categories")
}
<div class="card mb-3">
    
  <div class="row g-0">
    <div class="col-md-4">
      <img src="~/images/@Model.ImageUrl" class="img-fluid rounded-start">
    </div>
    <div class="col-md-8">
        <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">@Model.Description</p>
        <p class="card-text"><small class="text-muted">3 Days Ago</small></p>
      </div>
    </div>
  </div>
</div>