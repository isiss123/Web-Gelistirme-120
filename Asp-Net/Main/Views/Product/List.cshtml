@model ProductViewModel
@{
    var products = @Model.Products;
    var category = @Model.Category;
    var popularClass = products.Count>2 ?"popular":"";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <title>Product</title>

    <style>
        .popular{
            color: green;
            font-weight: 700;
        }
        .sos{
            background-color: red;
            color: white;

            padding: 5px;
        }
        .jumbotron{
            display: flex;
            flex-direction :column;
            justify-content: center;
            align-items: start;
            background-color: #e6e6e6;
            padding: 40px;
        }
    </style>
</head>
<body>
    <nav>
        <div class="navbar bg-primary navbar-dark navbar-expand-sm">
            <div class="container">
                <ul class="navbar-nav">
                    <li class="nav-item"><a href="#"class="nav-link">Link 1</a></li>
                    <li class="nav-item"><a href="#"class="nav-link">Link 2</a></li>
                    <li class="nav-item"><a href="#"class="nav-link">Link 3</a></li>
                </ul>

            </div>
        </div>

    </nav>
    <header>
        <div class="jumbotron jumbotron-fluid">
            <div class="container">
                    <h1 class="display-4">AxotApp</h1>
                    <p class="lead">Lorem ipsum, dolor sit amet consectetur adipisicing elit. Architecto, atque.</p>
            </div>
            
        </div>
    </header>

    <main>

    <div class="container">
        <h1 class="@popularClass">@category.Name</h1>
        @if (products.Count == 0)
        {
            <p class="alert alert-warning">Mehsul yoxdur</p>
        }
        else{
        <div class="row">
                @foreach (var product in products)
                {
                    <div class="col-md-3">
                    <div class="card">
                        <img class="card-image-top" src="https://picsum.photos/600/600" alt="">
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text"> @product.Description</p>
                            <a href="#" class="btn btn-primary">Description</a>                             
                        </div>
                    </div>
                    </div>
                            
                }
        </div>
        }
    </div>
    </main>
    
</body>
</html>