@model Product
<div class="card">
    <img class="card-image-top" src="~/images/@Model.ImageUrl" alt="@Model.Name.ToLower()">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <small class="text-muted"><i class="fa-solid fa-dollar-sign"></i> @Model.Price</small>
    </div>
    <div class="card-footer text-center">
            <a asp-controller="user" asp-action="details" asp-route-url="@Model.Url" class="btn btn-primary btn-sm">Details</a>
            @if(User.Identity.IsAuthenticated)
            {
                <form asp-controller="Cart" asp-action="AddToCart" style="display: inline;" method="POST">
                    <input type="hidden" name="productId" value="@Model.ProductId">
                    <input type="hidden" name="quantity" value="1">
                    <button type="submit" class="btn btn-primary btn-sm">Add To Cart</button>
                </form>
            }
    </div>
</div>
