@model Product
<div class="card">
    <img class="card-image-top" src="~/images/@Model.ImageUrl" alt="">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text"> @Model.Price</p>
        @* <a href="product/details/@Model.ProductId" class="btn btn-primary">Details</a> *@
        <a asp-controller="product" asp-action="details" asp-route-id="@Model.ProductId" class="btn btn-primary btn-sm">Details</a> 
        <a asp-controller="product" asp-action="edit" asp-route-id="@Model.ProductId" class="btn btn-danger btn-sm">Edit</a>
        <form action="/product/delete" method="POST" style="display:inline;">
            <input type="hidden" name="ProductId" value="@Model.ProductId">
            <button type="submit" class="btn btn-warning btn-sm">Delete</button>
        </form>
    </div>
</div>
