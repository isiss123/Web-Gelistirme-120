@model List<Category>

<div class="list-group">
    <a asp-controller="user"asp-action="list" asp-route-id="" class="list-group-item list-group-item-action">Bütün Kategoryalar</a>
    @foreach (var category in Model)
    {
        <a asp-controller="user"asp-action="list" asp-route-id="@category.CategoryId" class="list-group-item st-group-item-action @(
            ViewBag.SelectedCategory == category.CategoryId.ToString()?"active":""
        )" >@category.Name</a>
    }
    
</div>