@model OrderModel
<h2 class="h2">Sifarişinizi Tamamlayın</h2>
<hr>
<div class="row">
    <div class="col-md-8">
        <h4 class="mb-3">
            <span>Əlaqə məlumatları</span>
        </h4>
        <hr>
        <form method="POST">
            <input type="hidden" name="cartId" value="1">
            <input type="hidden" value="@Model.CartModel.TotalPrice()" name="TotalPrice">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="FirstName" class="form-label">First Name</label>
                    <input type="text" class="form-control" asp-for="FirstName">
                </div>
                <div class="col-md-6">
                    <label asp-for="LastName" class="form-label">Last Name</label>
                    <input type="text" class="form-control" asp-for="LastName">
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="Address" class="form-label">Address</label>
                <textarea class="form-control" asp-for="Address"></textarea>
            </div>
            <div class="row mb-3">
                <div class="col-md-4">
                    <label asp-for="City" class="form-label">City</label>
                    <input type="text" class="form-control" asp-for="City">
                </div>
                <div class="col-md-4">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input type="email" class="form-control" asp-for="Email">
                </div>
                <div class="col-md-4">
                    <label asp-for="Phone" class="form-label">Phone</label>
                    <input type="text" class="form-control" asp-for="Phone">
                </div>
            </div>
            <div class="mb-3"></div>
            <div class="d-grid">
                <button class="btn btn-primary" type="submit">Ödə</button>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <h4 class="mb-3">
            <span>Məzmun</span>
        </h4>
        <hr>
        <ul class="list-group mb-3">


            @foreach (var item in Model.CartModel.CartItems)
            {
                <li class="list-group-item d-flex justify-content-between">
                    <div>
                        <h6>@item.Name</h6>
                    </div>
                    <span class="text-muted">@item.Price.ToString("c") <i class="fa-solid fa-dollar-sign"></i></span>
                </li>
            }
            <li class="list-group-item d-flex justify-content-between">
                <div>
                    <h5>Toplam</h5>
                </div>
                <strong >@Model.CartModel.TotalPrice().ToString("c") <i class="fa-solid fa-dollar-sign"></i></strong>
            </li>
        </ul>
    </div>
</div>


@section Links
{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
}